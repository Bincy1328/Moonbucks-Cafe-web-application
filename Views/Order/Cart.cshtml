@{
	Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Shopping Cart App</title>

	<!-- Boostrap CSS -->
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">

	<!-- Style CSS -->
	<link href="~/css/cart.css" rel="stylesheet" />
</head>
<body>

	<div class="main row" style="margin-top:45%">

		<div class="container1 col-8">
			<div class="items-container">
				<h3>Shopping Cart App</h3>
				<div class="items">
					<!-- Generated by Script -->
				</div>
			</div>
		</div>

		<div class="container2  col-4">
			<div class="cart-container">
				<div class="cart">
					<h4>Cart</h4>
					<ul class="list-group cart-list"></ul>
				</div>

				<div class="check-out">
					<p>Subtotal: <span class="subtotal float-right">0</span></p>
					<p>Tax(12%): <span class="tax float-right">0</span></p>
					<p>Total: <span class="total float-right">0</span></p>
					<div class="row">
						<p>Select Payment Method:</p>
						<div class="form-control">
							<input type="radio" id="cod" name="payment" value="cod" checked>
							<label for="cod">Cash on Delivery (COD)</label><br>
						</div>
						<div class="form-control">
							<input type="radio" id="online" name="payment" value="online">
							<label for="online">Online Payment</label><br>
						</div>

					</div><br />
					<div class="buttons row">
						<button class="btn btn-danger form-control col-5" onclick="clearCart()">Clear All</button>
						<button class="btn btn-secondary form-control col-5" onclick="fninsertorder()">Order</button>
					</div><br />
					<div class="buttons row">
						<button class="btn btn-success form-control col-5" onclick="location.href='/Order/OrderDetails'">Order Details</button>

					</div>
				</div>
			</div>
		</div>

	</div>


	<!-- Bootstrap JS -->
	<script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>

	<!-- Script JS -->
	<script src="~/js/cart.js"></script>
</body>
</html>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>

<script type="text/javascript">
	function fninsertorder() {
		var selectedValue = $("input[name='payment']:checked").val();
			if(selectedValue=='cod'){

				$.ajax({	
					url: '/Order/PlaceOrder',  // Replace with the correct URL of your controller action
					type: 'POST',
					contentType: 'application/json',  // Ensure the content type is set to application/json
					data: JSON.stringify(cartLists),  // Send the cart data directly as JSON
					success: function(response) {
						// Handle the server response (e.g., show a success message)
						alert('Your order has been placed successfully!');
					},
					error: function(xhr, status, error) {
						// Handle error
						alert('There was an error placing your order.');
					}
				});
			}
			else{
				window.location.href="/Order/Payment";
			}
	}

</script>